<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_managed_item"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    app:cardElevation="7dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/managed_infos"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19dp"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_marginTop="5dp"
                    android:text="Semaine du "/>

                <TextView
                    android:id="@+id/managed_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19dp"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_marginTop="5dp"
                    tools:text="21/01/2021"/>
            </LinearLayout>

            <TextView
                android:id="@+id/managed_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_marginTop="5dp"
                tools:text="INT-001007"/>

            <TextView
                android:id="@+id/managed_wps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_marginTop="5dp"
                tools:text="TM_FA-Forensic Restructuring"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/managed_validate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/checked"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>